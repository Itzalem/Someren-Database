@model List<Someren_Database.Models.Student>

@{
	ViewData["Title"] = "Students";
}

<div class="text-center">
	<h1 class="display-4">Students</h1>
</div>

<form asp-action="StudentsIndex" method="get" class="mb-3">
	<div class="form-group">
		<input type="text" name="lastNameFilter" class="form-control mr-2" placeholder="Search by Last Name" value="@ViewBag.LastNameFilter" />
		<button type="submit" class="btn btn-primary">Filter</button>
	</div>
</form>

<div class="container mx-auto" style="max-width:90%;">
	<table class="table table-hover table-striped table-bordered">
	<thead>
		<tr>
			<th>Number</th>
			<th>Name</th>
			<th>Last Name</th>
			<th>Phone Number</th>
			<th>Class</th>
			<th>Room</th>
		</tr>
	</thead>
	<tbody>
		@{
			foreach (var student in Model)
			{
				<tr>
					<td>@student.StudentNumber</td>
					<td>@student.FirstName</td>
					<td>@student.LastName</td>
					<td>@student.PhoneNumber</td>
					<td>@student.StudentClass</td>
					<td>@student.RoomNumber</td>
					<td><a class="btn btn-primary" asp-controller="Students" asp-action="UpdateStudent" asp-route-studentNumber="@student.StudentNumber">Edit</a></td>
					<td><a class="btn btn-danger" asp-controller="Students" asp-action="DeleteStudent" asp-route-studentNumber="@student.StudentNumber">Delete</a></td>
				</tr>
			}
		}
	</tbody>

</table>

	<a href="/Students/AddStudent" class="btn btn-primary"> Add New Student</a>
	</div>

	

