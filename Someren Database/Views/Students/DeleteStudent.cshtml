@model Someren_Database.Models.Student

@{
	ViewData["Title"] = "Delete Student";
}

<h1>Delete Student</h1>
<form action="/Students/DeleteStudent" method="POST">
	<div class="form-group py-2">
		<label for="StudentNumber">Number:</label>
		<input type="text" id="StudentNumber" name="StudentNumber" class="form-control" readonly value="@Model?.StudentNumber" />
	</div>

	<div class="form-group py-2">
		<label for="FirstName"> Name:</label>
		<input type="text" id="FirstName" name="FirstName" class="form-control" readonly value="@Model?.FirstName" />
	</div>

	<div class="form-group py-2">
		<label for="LastName">Last Name:</label>
		<input type="text" id="LastName" name="LastName" class="form-control" readonly value="@Model?.LastName" />
	</div>

	<div class="form-group py-2">
		<label for="PhoneNumber">Phone Number:</label>
		<input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" readonly value="@Model?.PhoneNumber" />
	</div>

	<div class="form-group py-2">
		<label for="StudentClass">Class:</label>
		<input type="text" id="StudentClass" name="StudentClass" class="form-control" readonly value="@Model?.StudentClass" />
	</div>

	<div class="form-group py-2">
		<label for="RoomNumber">Room:</label>
		<input type="text" id="RoomNumber" name="RoomNumber" class="form-control" readonly value="@Model?.RoomNumber" />
	</div>

	<button type="submit" class="btn btn-primary">Delete</button>
	<a href="/Students/StudentsIndex">Cancel</a>
</form>



