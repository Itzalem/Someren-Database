@model IEnumerable<Someren_Database.Models.Activity>

@{
    ViewData["Title"] = "Activity List";
}

<div class="container mt-4">
    <h1>List of All Activities</h1>

    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Activity Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var activity in Model)
            {
                <tr>
                    <td>@activity.ActivityName</td>
                    <td>@activity.StartDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@activity.EndDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a asp-action="" asp-controller="" asp-route-id="" class="btn btn-primary">Manage Supervisors</a>
                        <a asp-action="ManageParticipants" asp-controller="ActivityParticipant" asp-route-activityId="@activity.ActivityId" class="btn btn-danger">Manage Participants</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

