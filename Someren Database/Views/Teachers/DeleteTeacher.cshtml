@model Someren_Database.Models.Teacher

@{
	ViewData["Title"] = "Delete Teacher";
}

<h1>Delete Teacher</h1>
<form action="/Teachers/DeleteTeacher" method="POST">
	<div class="form-group py-2">
		<label for="TeacherID">ID:</label>
		<input type="text" id="TeacherID" name="TeacherID" class="form-control" readonly value="@Model?.TeacherID" />
	</div>

	<div class="form-group py-2">
		<label for="RoomNumber">Room:</label>
		<input type="text" id="RoomNumber" name="RoomNumber" class="form-control" readonly value="@Model?.RoomNumber" />
	</div>

	<div class="form-group py-2">
		<label for="FirstName"> Name:</label>
		<input type="text" id="FirstName" name="FirstName" class="form-control" readonly value="@Model?.FirstName" />
	</div>

	<div class="form-group py-2">
		<label for="LastName">Last Name:</label>
		<input type="text" id="LastName" name="LastName" class="form-control" readonly value="@Model?.LastName" />
	</div>

	<div class="form-group py-2">
		<label for="PhoneNumber">Phone Number:</label>
		<input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" readonly value="@Model?.PhoneNumber" />
	</div>

	<div class="form-group py-2">
		<label for="Age">Class:</label>
		<input type="number" id="Age" name="Age" class="form-control" readonly value="@Model?.Age" />
	</div>

	

	<button type="submit" class="btn btn-primary">Delete</button>
	<a href="/Teachers/TeachersIndex">Cancel</a>
</form>



