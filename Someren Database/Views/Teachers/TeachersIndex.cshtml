@model List<Someren_Database.Models.Teacher>

@{
    ViewData["Title"] = "Teachers List";
}

<h1>Teachers</h1>


<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>

            <th> Room</th>

            <th>First Name</th>

            <th>Last Name</th>

            <th>Phone</th>

            <th>Age</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.TeacherID</td>
                <td>@teacher.RoomNumber</td>
                <td>@teacher.FirstName</td>
                <td>@teacher.LastName</td>
                <td>@teacher.PhoneNumber</td>
                <td>@teacher.Age</td>

                <td> <a asp-action="UpdateTeacher" asp-route-teacherID="@teacher.TeacherID" class="btn btn-warning btn-sm">Edit</a> </td>
                <td> <a asp-action="DeleteTeacher" asp-route-teacherID="@teacher.TeacherID" class="btn btn-danger btn-sm">Delete</a> </td>
            </tr>
        }
    </tbody>
</table>


<p>
    <a asp-action="AddTeacher" asp-controller="Teachers" class="btn btn-success">Create New Teacher</a>
</p>
