@model List<Someren_Database.Models.Teacher>

@{
	ViewData["Title"] = "Teacher";
}

<div class="text-center">
	<h1 class="display-4">Teachers</h1>
</div>

<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Room</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Phone Number</th>
			<th>Age</th>
		</tr>
	</thead>
	<tbody>
		@{
			foreach (var teacher in Model)
			{
				<tr>
					<td>@teacher.TeacherID</td>
					<td>@teacher.RoomNumber</td>
					<td>@teacher.FirstName</td>
					<td>@teacher.LastName</td>
					<td>@teacher.PhoneNumber</td>
					<td>@teacher.Age</td>
					
					<td><a asp-controller="Teachers" asp-action="UpdateTeacher" asp-route-teacherID="@teacher.TeacherID">Edit</a></td>
					<td><a asp-controller="Teachers" asp-action="DeleteTeacher" asp-route-teacherID="@teacher.TeacherID">Delete</a></td>
				</tr>
			}
		}
	</tbody>

</table>

<div class="text-center mt-4">
	<a asp-action="AddTeacher" asp-controller="Teachers" class="btn btn-success">Create New Teacher</a>
</div>

