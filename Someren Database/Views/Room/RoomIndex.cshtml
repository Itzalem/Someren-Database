@model IEnumerable<Someren_Database.Models.Room>

@{
    ViewData["Title"] = "Room List";
}

<div class="container mt-4">
    <h1>List Of All Rooms</h1>

    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Room Number</th>
                <th>Room Type</th>
                <th>Building</th>
                <th>Floor</th>
                <th>Size</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.RoomNumber</td>
                    <td>@room.RoomType</td>
                    <td>@room.Building</td>
                    <td>@room.Floor</td>
                    <td>@room.Size</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Room" asp-route-roomNumber="@room.RoomNumber" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-controller="Room" asp-route-roomNumber="@room.RoomNumber" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
