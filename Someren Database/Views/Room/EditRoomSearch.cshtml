@{
    ViewData["Title"] = "Search Room to Edit";
}

<div class="container mt-4">
    <h1>Search for Room to Edit</h1>

    <!-- Room Number Search Form -->
    <form method="get" asp-action="EditRoomSearch" asp-controller="Room" class="mb-4">
        <div class="form-group">
            <label for="roomNumber">Enter Room Number:</label>
            <input type="number" id="roomNumber" name="roomNumber" class="form-control" placeholder="Enter Room Number" />
        </div>
        <button type="submit" class="btn btn-primary mt-2">Search</button>
    </form>

    <!-- Display a message if no room was found -->
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-warning">
            @ViewBag.Message
        </div>
    }
</div>
