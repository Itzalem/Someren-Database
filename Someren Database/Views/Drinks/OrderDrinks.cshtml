@model Someren_Database.Models.Order
@{
	ViewData["Title"] = "Create Drink";
}

<h2>Create New Order</h2>

<form action="/Drinks/OrderDrinks" method="POST">
    
    <div class="form-group py-2">
        <label asp-for="StudentNumber" class="control-label">Student:</label>
        <select asp-for="StudentNumber" asp-items="(SelectList)ViewBag.StudentsList" class="form-control">
            <option value=""> Select a Student </option> 
        </select>
    </div>

    <div class="form-group py-2">
        <label asp-for="DrinkId" class="control-label">Drink:</label>
        <select asp-for="DrinkId" asp-items="(SelectList)ViewBag.DrinksList" class="form-control">
            <option value=""> Select a Drink </option>
        </select>
    </div>

    <div class="form-group py-2">
        <label asp-for="Amount" class="control-label">Amount:</label>
        <input asp-for="Amount" type="number" class="form-control" required />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Order</button>

    <a href="/Drinks/DrinksIndex" class="btn btn-primary">Cancel</a>
    
</form>


